{% extends "UvwebUvBundle::layout.html.twig" %}

{% form_theme add_user_form 'UvwebUvBundle:Form:bootstrap_row.html.twig' %}

{% block title %}
    Inscription - {{ parent() }}
{% endblock %}

{% block style %}
.uvnumbercode {
    color : #72bbaa;
}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Bienvenue sur UVweb, <strong>{{ login }}</strong></h1>
    </div>
    <p>
        Ton compte UTC a été retrouvé avec succès. Inscris-toi rapidement sur UVweb pour poster des avis !
    </p>
    <div class="well">
            {{ form_errors(add_user_form) }}
        <form class="form-horizontal" method="post" {{ form_enctype(add_user_form) }}>
            {{ form_widget(add_user_form) }}
            <div class="control-group">
              <div class="controls">
                <button type="submit" class="btn btn-success">Valider</button>
              </div>
            </div>
            {{ form_rest(add_user_form) }}
        </form>
    </div>
{% endblock %}