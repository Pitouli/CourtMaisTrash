<table class="table table-condensed table-bordered table-striped">
	<thead>
		<tr class="{{ tableType }}">
			<th>{{ title }}</th>
			<th>Avis</th>
			<th>Note</th>
		</tr>
	</thead>
	<tbody>
		{% for uv in uvs %}
			<tr>
				<td><a href="{{ path('uvweb_uv_detail' , { 'uvname': uv.name }) }}">{{ uv.name }}</a></td>
				<td>{{ uv.commentCount }}</td>
				<td>{{ uv.globalRate | number_format(2, ',', '.') }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>