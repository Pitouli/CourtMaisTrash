  {% extends "UvwebUvBundle::layout.html.twig" %}

  {% block title %}
  Accueil - {{ parent() }}
  {% endblock %}

  {% block style %}
  {% endblock %}

  {% block body %}
  <div class="span12">
    <div class="hero-unit">
      <h1>Bienvenue sur UVweb.</h1>
      <p>Pour consulter les avis d'une UV ou pour donner le tien, tape son nom dans la barre de recherche (par exemple, "MT23").</p>
    </div>
  </div>
  <div class="span12">
    <div class="span6">
      <div class="page-header">
        <h2>Activité récente</h2>
      </div>
      {% for comment in comments %}
      <div class="row-fluid">
        <div class="span3">
          <a href="{{ path('uvweb_uv_profile', { 'userid' : comment.author.id }) }}" class="thumbnail">
            <img src="{{ gravatar('alexandre.masciulli@etu.utc.fr', 80) }}" alt="hello's gravatar"/>
          </a>
        </div>
        <div class="span9">
          <div class="row-fluid">
            <div class="span9">
              <h4><a href="{{ path('uvweb_uv_profile', { 'userid' : comment.author.id }) }}">{{ comment.author.login }}</a> a posté un nouveau commentaire sur <a href="{{ path('uvweb_uv_detail', { 'uvname':comment.uv.name }) }}">{{ comment.uv.name }}</a></h4>
            </div>
            <div class="span3">
              <h6>le {{ comment.date|date('d/m/Y') }}</h6>
            </div>
          </div>
          <p>
            {{ comment.comment }}
          </p>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="span5 offset1">
      <div class="page-header">
        <h2>News</h2>
      </div>
        {% for newsitem in news %}
          <div class="row-fluid">
            <div class="span9">
              <h4>{{ newsitem.title }}</h4>
            </div>
            <div class="span3">
              <h5>le {{ newsitem.date|date('d/m/Y') }}</h5>
            </div>
              <p>{{ newsitem.text }}</p>
          </div>
        {% endfor %}

    </div>

  </div>
{% endblock %}